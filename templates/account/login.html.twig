{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
<div class="container section" style="height:80vh;">
    <div class="row text-center">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="card py-3 my-5 px-3">
                <h1 class="title my-4">Connectez vous</h1>
                {% if hasError %}
                    <div class="alert alert-danger">Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide</div>
                {% endif %}

                <form action="{{ path('account_login')}}" method="post">
                    <div class="form-group">
                        <label class="text-primary" for="email">Email</label>
                        <input class="form-control" id="email" name="_username" placeholder="Adresse email..." type="text" required value={{username}}>
                    </div>
                    <div class="form-group">
                        <label class="text-primary" for="password">Mot de passe</label>
                        <input class="form-control" type="password" name="_password" id="password" placeholder="Mot de passe..." required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card my-5 p-3">
            
                <h4 class="title">Pas encore de compte?</h4>
                <a class="btn btn-primary" href="{{ path('account_register') }}">Inscrivez-vous</a>
            </div>
        </div>
    </div>
    
</div>


{% endblock %}
